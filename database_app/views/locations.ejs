<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


 <!-- Main Site -->
 <main id="site-main">
    <div class="container-fluid">
        <div class="box-nav d-flex justify-between">
            <a href="/add-location" class="btn btn-outline">
                <span class="text-gradient">Add Locations<i class="fas fa-user"></i></span>
            </a>
        </div>

        <!-- form handling -->
        <form action="/locations" method="POST">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>India</th>
                        <th>Canada</th>
                        <th>UK</th>
                        <th>USA</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_locations') %> 
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- /Main Site -->


