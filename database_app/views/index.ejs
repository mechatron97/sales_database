
<!-- include header -->
    <%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container-fluid">
            <div class="box-nav d-flex justify-between">
                <a href="/add-record" class="btn btn-outline">
                    <span class="text-gradient">New Record<i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Company Name</th>
                            <th>Website</th>
                            <th>Size</th>
                            <th>Revenue</th>
                            <th>HeadQuarters</th>
                            <th>Sales Contact</th>
                            <th>India</th>
                            <th>Canada</th>
                            <th>UK</th>
                            <th>USA</th>
                            <th>Contact Persons</th>
                            <th>Priority</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


