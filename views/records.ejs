
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container-fluid">
            <div class="text-center">
                <a href="/" class="btn btn-outline">
                    <span class="text-center">Home Page</i></span>
                </a>
                <h2>Sales In Progress</h2>
            </div>

            <div class="box-nav d-flex justify-between">
                <a href="/add-record" class="btn btn-outline">
                    <span class="text-gradient">New Record<i class="fas fa-user"></i></span>
                </a>
                <% if (user){ %>
                <p>Welcome, <%= user.name %></p>
                <a href="/logout" class="btn btn-outline">
                    <span class="text-gradient">Log Out<i class="fas fa-angle-double-left"></i></span>
                </a>
                <% } else { %>
                <a href="/login" class="btn btn-outline">
                    <span class="text-gradient">Log In<i class="fas fa-user"></i></span>
                </a>
                <a href="/register" class="btn btn-outline">
                    <span class="text-gradient">Register<i class="fas fa-user"></i></span>
                </a>
                <% } %>
            </div>

            <!-- form handling -->
            <form action="/records" method="POST">
                <table id="table" class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Company Name</th>
                            <th>Website</th>
                            <th>Size</th>
                            <th>Revenue</th>
                            <th>HeadQuarters</th>
                            <th>Sales Contact</th>
                            <th>Priority</th>
                            <th>Details</th>
                            <th>First Priority</th>
                            <th>Second Priority</th>
                            <th>Third Priority</th>
                            <th>Fourth Priority</th>
                            <th>Comments</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <%- include('include/_records'); %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->