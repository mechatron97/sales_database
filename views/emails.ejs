
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container-fluid">
            <div class="text-center">
                <a href="/home" class="btn btn-outline">
                    <span class="text-center">Home Page</i></span>
                </a>
                <h2>Email Subscriptions List</h2>
            </div>
            
            <div class="box-nav d-flex justify-between">
                <a href="/add-email" class="btn btn-outline">
                    <span class="text-gradient">New Subscription<i class="fas fa-user"></i></span>
                </a>
                <% if (user){ %>
                <p>Welcome, <%= user.name %></p>
                <a href="/logout" class="btn btn-outline">
                    <span class="text-gradient">Log Out<i class="fas fa-angle-double-left"></i></span>
                </a>
                <% } else { %>
                <a href="/login" class="btn btn-outline">
                    <span class="text-gradient">Log In<i class="fas fa-user"></i></span>
                </a>
                <a href="/register" class="btn btn-outline">
                    <span class="text-gradient">Register<i class="fas fa-user"></i></span>
                </a>
                <% } %>
            </div>
            
            <!-- form handling -->
            <form action="/emails" method="POST">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Company</th>
                            <th>Designation</th>
                            <th>Country</th>
                            <th>Source</th>
                            <th>Subscription Status</th>
                            <th>Added By</th>
                            <th>Added On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_emails') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->