<%- include('include/_header') %>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
			<div class="filter">
				<a href="/register" class="btn btn-outline"><i class="fas fa-angle-double-left"></i> New user? Sign Up</a>
			</div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Existing User</h2>
            <span class="text-dark">Login with your credentials</span>
        </div>

<form action="/login" method="POST" id="add_user">
  <div class="new_record">
	<div class="form-group">
		<label for="name">Username</label>
		<input type="email" name="username" placeholder="Username" required="true">
	</div>
	<div class="form-group">
		<label for="name">Password</label>
		<input type="password" name="password" placeholder="Password" required="true">
	</div>
	<div class="form-group">
		<button type="submit" class="btn text-light update">Login</button>
	</div>
	</div>
</form>
</div>

<!-- include footer -->
<%- include('include/_footer') %>
