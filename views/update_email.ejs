
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/emails"><i class="fas fa-arrow-left"></i> All Subscriptions</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Subscription</h2>
            <span class="text-dark">Use the below form to update a subscription</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form action="/api/emails/" method="POST" id="update_email">
    <div class="new_record">
        <div class="form-group">
            <label for="email" class="text">Email</label>
            <input type="hidden" name="id" value="<%= email._id %>">
            <input type="text" name="email" value="<%= email.email %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="name" class="text">Name</label>
            <input type="text" name="name" value="<%= email.name %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="company" class="text">Company</label>
            <input type="text" name="company" value="<%= email.company %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="designation" class="text">Designation</label>
            <input type="text" name="designation" value="<%= email.designation %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="country" class="text">Country</label>
            <input type="text" name="country" value="<%= email.country %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="source" class="text">Source</label>
            <input type="text" name="source" value="<%= email.source %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="status" class="text">Status</label>
            <input type="text" name="status" value="<%= email.status %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="ab" class="text">Added By</label>
            <input type="text" name="ab" value="<%= email.ab %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="ao" class="text">Added On</label>
            <input type="text" name="ao" value="<%= email.ao %>" placeholder="">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-block btn-primary btn-lg">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

